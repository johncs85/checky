<%- include('../partials/nav.ejs') %>

  <a href="/" class="text-decoration-none d-inline-flex align-items-center mb-3">
    <span class="me-2">&lAarr;</span> Back home
  </a>

  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-body">
      <h1 class="card-title fw-bold mb-3">
        <%= checklist.title %>
        <% if (checklist.completed) { %>
          <span class="badge bg-success ms-2">Completed</span>
        <% } else { %>
          <span class="badge bg-secondary ms-2">Incomplete</span>
        <% } %>
      </h1>

      <% if (checklist.note) { %>
        <p class="card-text fs-5 text-muted"><%= checklist.note %></p>
      <% } else { %>
        <p class="text-muted fst-italic">No note added for this checklist.</p>
      <% } %>

      <hr class="my-4" />

      <div class="d-flex gap-3">
        <a href="/checklists/<%= checklist._id %>/edit" class="btn btn-outline-primary flex-fill">
          Edit
        </a>

        <form
          action="/checklists/<%= checklist._id %>?_method=DELETE"
          method="post"
          class="flex-fill"
        >
          <button type="submit" class="btn btn-outline-danger w-100">
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
</html>
