<%- include('../partials/nav.ejs')  %>

<section>
    <form action="/checklists" method="post">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" placeholder="Add Checklist">
    
    <label for="note">Note: </label>
    <input type="textarea" name="note" id="note">
    
    <label for="completed">Completed</label>
    <input type="checkbox" name="completed" id="completed">
    
    <button type="submit">Submit Checklist</button>
</form>
</section>
<h1>All Checklists</h1>
<ul>
    <% checklists.forEach(checklist => { %>
        <li> <span><%= checklist.completed ? "Completed" : "Incomplete" %></span> <a href="/checklists/<%= checklist._id %>"><%= checklist.title %></a> <%= checklist.note %></li>
    <% }) %>
</ul>
</body>
</html>