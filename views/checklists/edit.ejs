<%- include('../partials/nav.ejs') %>

<div class="container py-5" style="max-width: 600px;">
  <a href="/checklists/<%= checklist._id %>" class="text-decoration-none d-inline-flex align-items-center mb-3">
    <span class="me-2">&lAarr;</span> Back
  </a>

  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-body">
      <h1 class="card-title fw-bold mb-4">Edit Checklist</h1>

      <form action="/checklists/<%= checklist._id %>?_method=PUT" method="post" class="d-flex flex-column gap-3">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= checklist.title %>"
            placeholder="Enter checklist title"
            required
          />
          <label for="title">Title</label>
        </div>

        <div class="form-floating">
          <textarea
            class="form-control"
            id="note"
            name="note"
            placeholder="Add a note for this checklist"
            style="height: 120px"
          ><%= checklist.note %></textarea>
          <label for="note">Note</label>
        </div>

        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="completed"
            name="completed"
            <%= checklist.completed ? 'checked' : '' %>
          />
          <label class="form-check-label" for="completed">Completed</label>
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-semibold mt-3">
          Update Checklist
        </button>
      </form>
    </div>
  </div>
</div>
